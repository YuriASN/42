#include <stdlib.h> // lib do malloc.
#define LENGHT	42 <bites>

int	main(void)
{
char *str;

str = malloc(LENGHT) //aloquei memoria na string
str = malloc(sizeof(char) * (LENGHT + 1)); //aloca para a string o tamanho de LENGHT + 1(mais um para o '\0') vezes o tamanho de bites do tipo, int,char,float etc.
str = malloc(sizeof(*str) * (LENGHT + 1));//usa o tamanho do tipo do str. Assim nao precisa de dizer o tipo mas sim o proprio nome.
str = (char*)malloc(sizeof(char) * (LENGHT + 1));// A definicao de MALLOC eh VOID, entao tem que se dar um cast (no caso "char*") para que o malloc seja do mesmo tipo de "*str".

free(str); //libera a memoria alocada para "str".
}